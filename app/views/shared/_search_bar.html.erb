<div class="row justify-content-center entire-search-bar">
  <div class="col-sm-12 my-3 position-relative">
    <%= form_with url: pokemons_path, method: :get, class: "d-flex align-items-center" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control search-bar",
        placeholder: "Find a Pokemon"
      %>
      <button type="submit" class="btn position-absolute">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    <% end %>
  </div>
</div>
