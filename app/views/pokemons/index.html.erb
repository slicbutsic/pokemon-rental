<div class="container-fluid">
  <div class="row">
    <div class="col-lg-8">
      <div class="album py-5">
        <div class="container">
          <% if user_signed_in? %>
            <div class="d-flex justify-content-start mb-3">
              <%= button_to "Add New", new_pokemon_path, method: :get, class: "btn btn-warning text-align-right", style: "background-color: #003153; color: white;"%>
            </div>
          <% end %>
          <div class="row">
            <%= render "shared/pokemon_card" %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div data-controller="map"
        id="map"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
        data-map-markers-value="<%= @markers.to_json %>"
        style="width: 100%; height: 100vh;">
      </div>
    </div>
  </div>
</div>
