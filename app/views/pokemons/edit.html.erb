<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= simple_form_for(@pokemon) do |f| %>
        <div class="nes-field">
          <%= f.input :name %>
          <%= f.input :overview %>
          <% @pokemon.photos.each do |photo| %>
            <%= cl_image_tag photo.key, height: 200, width: 200, fill: :cover%>
          <% end %>

          <% @pokemon.photos.each do |photo| %>
            <%= f.hidden_field :photos, multiple: true, value: photo.signed_id %>
          <% end %>

          <%= f.input :photos, as: :file, input_html:{multiple: true} %>
          <%= f.input :price, class: "nes-btn is-warning my-4"  %>
          <%= f.submit "Update", class: "my-4 w-100", style: "background-color: #003153; color: white;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
